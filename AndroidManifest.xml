<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dropdownspinner"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".DropdownSpinnerActivity"
            android:label="@string/title_activity_dropdown_spinner" >
        </activity>
        <activity
            android:name="PopupListActivity"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name=".ui.DashboardActivity"
            android:label="@string/title_activity_dashboard" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.PopupWindowDropdownActivity" >
        </activity>
        <activity
            android:name=".ui.AutoCompleteDropdownActivity"
            android:label="@string/title_activity_auto_complete_dropdown" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.FragmentDropdownActivity"
            android:label="@string/title_activity_fragment_dropdown" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>